import "templates.mtt"

sub material()
{
	use mtt_objects(
		s_clr = "Desert.dds",                // texture de base
		s_nrm = "Desert_nrm.dds",            // texture de relief
		s_shn = "Desert_shn.dds",            // texture de brillance
		s_dye = "wall_dirt_b.dds",           // teinte
	    s_nrm_srf = "srf_DesertB_nrm.dds", 
        f_nrm_scale = 1.0,                   // taille de la texture de relief
		f_shn_factor = 1.0,                  // taux de brillance
		f_srf_uv_scale = 1.0,                // taille de la couche de surface  supérieure à 1 ça devient une texture mosaique
		f_nrm_srf_scale = 1.0,               // taille de la 2eme couche de relief en surface
		b_clr_vrt_on = TRUE,                    
		b_burn_on = TRUE,
		e_srf_id = SRF_FLESH                 // type de surface WOOD FLESH METAL etc
	);
}
